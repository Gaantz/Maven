<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_maven">

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/menu_cerrar"
            android:layout_height="match_parent"
            android:id="@+id/imgmenucerrar"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_gravity="right|center" />

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top">

        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleType="centerInside"
                android:src="@drawable/bigote_maven"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maven"
                android:textSize="34sp"
                android:textColor="@color/color_blanco"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/fragment_entrar_titulo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Project"
                android:textSize="18sp"
                android:textColor="@color/color_blanco"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/fragment_central_project" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="10dp">

            <FrameLayout
                android:padding="8dp"
                android:layout_width="fill_parent"
                android:id="@+id/btnlogeo"
                android:background="@color/color_blanco"
                android:layout_marginBottom="8dp"
                android:layout_height="50dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/bigote_verde" />
            </FrameLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa con Facebook"
                android:id="@+id/btnfacebook"
                android:textColor="@color/color_blanco"
                android:textStyle="bold"
                android:background="@drawable/holo_flat_button_facebook" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Si aún no te haz registrado, qué esperas?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/txtregistro"
                android:padding="5dp"
                android:autoLink="all"
                android:linksClickable="true"
                android:textColorLink="@color/color_blanco"
                android:textColor="@color/color_blanco"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>